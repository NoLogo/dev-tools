[GitHub]
  user = SemVerTsar
[user]
  name = Philip Tunnard-Gardner
  email = philip@no-logo.co.uk

[core]
  editor = nvim
  excludesfile = ~/.gitignore
  whitespace = blank-at-eol,cr-at-eol,tab-in-indent

[alias]
  git = hub

  a = add
  aa = add .
  ap = add -p
  b = branch
  c = commit
  co = checkout
  cob = checkout -b
  cv = commit -v
  d = diff
  dc = diff --cached
  df = diff --function-context
  dw = diff --word-diff
  in = !git fetch && git log ..origin/master
  l = log --oneline --decorate --all
  ld = log ORIG_HEAD.. --stat --no-merges --decorate
  lol = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files
  pl = pull
  pp = !git pull && git push
  pr = pull-request
  ps = push
  s = status -s
  who = shortlog -n -s --no-merges

[color]
  branch = auto
  diff = auto
  status = auto
  ui = true

[color "status"]
  added = green
  changed = red
  untracked = yellow

[status]
  relativePaths = true

[merge]
  conflictstyle = diff3

[push]
  default = current

[pull]
  rebase = true
